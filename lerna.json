{
  "lerna": "2.11.0",
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "loglevel": "success",
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "preid": "beta",
      "message": "chore(release): publish"
    },
    "publish": {
      "message": "chore(packages): release",
      "conventionalCommits": true,
      "npmClient": "npm",
      "registry": "http://localhost:4873/",
      "verifyAccess": false
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md"
  ]
}
